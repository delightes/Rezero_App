<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/drawerLay">

    <!--배경이 될 Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:padding="3dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_OpenDrawer"
                android:padding="15dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>

            <EditText
                android:gravity="center"
                android:id="@+id/searchBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/searchsize"
                android:layout_weight="6"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cartBtn"
                android:background="@drawable/carticonsize"
                android:layout_weight="1"
                />


        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/layout_tab"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            app:tabGravity="center"
            app:tabMode="fixed"
            app:tabTextColor="#000000"
            app:tabSelectedTextColor="#55967E"
            app:tabIndicatorColor="#55967E"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/homesize"
                android:id="@+id/homeBtn"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boxsize"
                android:id="@+id/boxBtn"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/likesize"
                android:id="@+id/likeBtn"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mysize"
                android:id="@+id/myBtn"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <!--드로어 화면이 될 Layout-->
<!--    android:layout_gravity="start"

            android:drawableLeft="@drawable/kitchensize"-->
    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#ffffff"
        android:layout_gravity="start"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제품별"
            android:fontFamily="@font/nanumsquare"
            android:padding="20dp"
            android:background="#E4E7EC"
            android:textColor="#6D819C"
            android:textSize="24dp" />

        <Button
            android:id="@+id/kitchenBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주방"
            android:background="#ffffff"
            android:textColor="#6D819C"
            android:fontFamily="@font/nanumsquare"
            android:textSize="24dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/gobtnsize"/>
        <Button
            android:id="@+id/bathBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="욕실"
            android:background="#ffffff"
            android:textColor="#6D819C"
            android:fontFamily="@font/nanumsquare"
            android:textSize="24dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/gobtnsize"/>
        <Button
            android:id="@+id/livingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리빙"
            android:background="#ffffff"
            android:textColor="#6D819C"
            android:fontFamily="@font/nanumsquare"
            android:textSize="24dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/gobtnsize"/>
        <Button
            android:id="@+id/pencyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="문구"
            android:background="#ffffff"
            android:textColor="#6D819C"
            android:fontFamily="@font/nanumsquare"
            android:textSize="24dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/gobtnsize"/>
        <Button
            android:id="@+id/bookBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="책"
            android:background="#ffffff"
            android:textColor="#6D819C"
            android:fontFamily="@font/nanumsquare"
            android:textSize="24dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/gobtnsize"/>
        <Button
            android:id="@+id/foodBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식"
            android:background="#ffffff"
            android:textColor="#6D819C"
            android:fontFamily="@font/nanumsquare"
            android:textSize="24dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/gobtnsize"/>
        <Button
            android:id="@+id/cosmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="화장품"
            android:background="#ffffff"
            android:textColor="#6D819C"
            android:fontFamily="@font/nanumsquare"
            android:textSize="24dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/gobtnsize"/>
        <Button
            android:id="@+id/petBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="반려동물"
            android:background="#ffffff"
            android:textColor="#6D819C"
            android:fontFamily="@font/nanumsquare"
            android:textSize="24dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/gobtnsize"/>
        <Button
            android:id="@+id/womanBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여성용품"
            android:background="#ffffff"
            android:textColor="#6D819C"
            android:fontFamily="@font/nanumsquare"
            android:textSize="24dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/gobtnsize"/>
<!--        <Button-->
<!--            android:id="@+id/btn_CloseDrawer"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/exitbtnsize"-->
<!--            android:textColor="#6D819C"-->
<!--            android:layout_gravity="center"/>-->

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>